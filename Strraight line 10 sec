#include <LiquidCrystal.h>

// LCD pins: RS=D8, EN=D9, D4=D4, D5=D5, D6=D6, D7=D7 (used by shield)
LiquidCrystal lcd(8, 9, 4, 5, 6, 7);

// L298N motor driver pins
int ENA = 11;    // PWM for left motor
int IN1 = 1;    // Left motor direction
int IN2 = 2;    // Left motor direction
int IN3 = 12;   // Right motor direction
int IN4 = 13;   // Right motor direction
int ENB = 3;    // PWM for right motor

void setup() {
  // LCD setup
  lcd.begin(16, 2);
  lcd.setCursor(0, 0);
  lcd.print("Initializing.....");
  delay(2000);

  // Motor pins setup
  pinMode(ENA, OUTPUT);
  pinMode(ENB, OUTPUT);
  pinMode(IN1, OUTPUT);
  pinMode(IN2, OUTPUT);
  pinMode(IN3, OUTPUT);
  pinMode(IN4, OUTPUT);

  // Start moving forward
  lcd.clear();
  lcd.setCursor(0, 0);
  lcd.print("Moving.....");

  digitalWrite(IN1, HIGH);   // Left motor forward
  digitalWrite(IN2, LOW);
  digitalWrite(IN3, LOW);   // Right motor forward
  digitalWrite(IN4, HIGH);

  analogWrite(ENA, 114);  // Start motors
analogWrite(ENB, 93);  // If using A4 as ON/OFF

for (int i = 1; i <= 10; i++) {
  lcd.setCursor(0, 1);           // Second row
  lcd.print("Timer: ");
  lcd.print(i);
  lcd.print("  ");             
  delay(1000);                   
}

  // Stop motors
  analogWrite(ENA, 0);
  analogWrite(ENB, 0);

  digitalWrite(IN1, LOW);
  digitalWrite(IN2, LOW);
  digitalWrite(IN3, LOW);
  digitalWrite(IN4, LOW);


  lcd.clear();
  lcd.setCursor(0, 0);
  lcd.print("Stopped.");
  lcd.setCursor(0, 1);
  lcd.print("Time Elapsed: 10s");

}

void loop() {
  // Nothing here â€” runs once
}
